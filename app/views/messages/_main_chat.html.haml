.chat-main
  .chat-main__header
    .chat-main__header__list
      .chat-main__header__list__box
        .chat-main__header__list__box__test
          = @group.name
          .chat-main__header__list__box__member
            member:
            - @group.users.each do |user|
              =user.name 
        .chat-main__header__list__btns
          =link_to edit_group_path(@group),class: "btn" do
            Edit

  .chat-main__messages
    = render @messages

  .chat-main__form
    .chat-main__form__box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .chat-main__form__box__set
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        .send
          = f.submit 'Send', class: 'form__submit'